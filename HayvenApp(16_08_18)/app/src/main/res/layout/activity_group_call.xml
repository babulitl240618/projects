<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/asa1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/notificationChat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/close_black"/>


            <TextView
                android:id="@+id/inputSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Group call"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="170dp"
                android:src="@drawable/search_black" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="5dp"
            android:padding="5dp" />
        <!--   <ListView
               android:id="@+id/list"
               android:layout_width="match_parent"
               android:layout_height="411dp"
               android:layout_above="@id/rlBottombar"
               android:layout_margin="5dp"
               android:background="@color/white"
               android:dividerHeight="5dp">

           </ListView>-->


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlBottombar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <!-- <android.support.v7.widget.RecyclerView
             android:id="@+id/list1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="5dp"
             android:dividerHeight="5dp"
             android:orientation="horizontal"
             android:visibility="gone"
             android:padding="5dp" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<android.support.v7.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">-->

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:background="@color/asabase"
                android:src="@drawable/hayven_green">

            </ImageView>


            <!--  <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:src="@drawable/fajlehrabbi1"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="you"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="10dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/blue_transparent"
                        android:src="@drawable/fajlehrabbi1"></ImageView>
                </android.support.v7.widget.CardView>


                <!--  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:src="@drawable/fajlehrabbi1"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="jason"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvstartcall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START CALL"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/blue_transparent"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>


</RelativeLayout>