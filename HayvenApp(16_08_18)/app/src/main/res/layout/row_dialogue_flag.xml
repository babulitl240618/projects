<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/white_bg_border"
            android:src="@drawable/reaction_18px_000"/>

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:background="@drawable/white_bg_border"
            android:src="@drawable/flagged_10px"/>

        <ImageView
            android:id="@+id/imgForward"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_bg_border"
            android:src="@drawable/tag_18px_000"/>

        <ImageView
            android:id="@+id/imgList"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:background="@drawable/white_bg_border"
            android:src="@drawable/share_18px_000"/>

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:background="@drawable/white_bg_border"
            android:layout_height="20dp"
            android:src="@drawable/more_18px_000"/>

    </LinearLayout>

</LinearLayout>