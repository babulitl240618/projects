<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >  
        <shape>
            <gradient
		    	android:startColor="#DD000000"
		    	android:endColor="#AA000000"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#B6B6B6"  />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#FFB6B6B6"  />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>