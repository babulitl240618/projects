<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">  
        <shape>
            <gradient
		    	android:startColor="#FF3A8048"
		    	android:endColor="#FF2C8B42"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#FF226B32"  />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item >        
        <shape>
            <gradient
		    	android:startColor="#FF4FAE62"
		    	android:endColor="#FF2C8B42"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF226B32"  />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>