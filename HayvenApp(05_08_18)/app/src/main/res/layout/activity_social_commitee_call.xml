<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asa1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/asa1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/asa1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/notificationChat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/arrow_back"/>


            <TextView
                android:id="@+id/inputSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Social Committee"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:padding="3dp"
                android:src="@drawable/voice_black" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:src="@drawable/vedio_black" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:src="@drawable/menu_black" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/chat_input_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Type a message."
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_weight="1"
            android:maxLines="2"/>

        <Button
            android:id="@+id/chat_send_msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/send_black_20" />

    </LinearLayout>

</RelativeLayout>