<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a conversation action"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lets get thing done"
        android:textColor="@color/asa"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Project"
            android:textColor="@color/blue_transparent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_bg_border"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_bg_border"
            android:textColor="@color/blue_transparent"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Event"
            android:textColor="@color/blue_transparent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_bg_border"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:background="@drawable/blue_bg_border"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/blue_transparent"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Roll"
            android:textColor="@color/blue_transparent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_bg_border"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Files"
            android:background="@drawable/blue_bg_border"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/blue_transparent"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>