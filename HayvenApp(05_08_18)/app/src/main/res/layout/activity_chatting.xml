        <LinearLayout
            android:id="@+id/lin_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/serchsms" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/asa1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/notificationChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/back_black" />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:fontFamily="@font/work_sans"
                android:text="Everyone @ Nav../"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/voice_black" />

            <ImageView
                android:id="@+id/vedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/vedio_black" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/menu_black" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/create_conversation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_circle"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/chat_input_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="Type a message."
            android:maxLines="2"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/chat_send_msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/send_black_20" />

    </LinearLayout>

</LinearLayout>