<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="#CC000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
           android:layout_marginBottom="5dp"
            android:layout_gravity="start"
            android:padding="3dp"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/TvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white1"
            android:fontFamily="@font/work_sans"
            android:gravity="center"
            android:text="Demo User"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/white3"
            android:gravity="center"
            android:textSize="12sp"
            android:text="CALLING" />

        <com.trncic.library.DottedProgressBar
            android:id="@+id/progress"
            android:layout_width="120dp"
            android:layout_height="0dp"
           android:layout_gravity="center"
            app:activeDot="@color/txtGray"
            app:dotSize="20dp"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            app:inactiveDot="@color/white"
            app:jumpingSpeed="670"
            app:spacing="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/fajlehrabbi1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:background="@drawable/round_corner_ase"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:text="GST"
                android:fontFamily="@font/assistant"
                android:textColor="@color/white1"
                android:textSize="12sp" />

        </RelativeLayout>

       <!-- <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/fajlehrabbi1" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/mute_56"
                android:layout_toLeftOf="@+id/imgVedio"
                android:layout_marginRight="30dp"
                android:id="@+id/imgMute" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imgMute"
                android:layout_alignLeft="@+id/imgMute"
                android:layout_alignRight="@+id/imgMute"
                android:layout_alignStart="@+id/imgMute"
                android:layout_below="@+id/imgMute"
                android:gravity="center"
                android:text="mute"
                android:textSize="12sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/white3" />

            <ImageView
                android:id="@+id/imgVedio"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/video_off_56" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imgVedio"
                android:layout_alignLeft="@+id/imgVedio"
                android:layout_alignRight="@+id/imgVedio"
                android:layout_alignStart="@+id/imgVedio"
                android:layout_below="@+id/imgVedio"
                android:gravity="center"
                android:text="vedio"
                android:textSize="12sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/white3" />

            <ImageView
                android:id="@+id/imgSpeaker"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/imgVedio"
                android:layout_toRightOf="@+id/imgVedio"
                app:srcCompat="@drawable/speaker_56" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imgSpeaker"
                android:layout_alignLeft="@+id/imgSpeaker"
                android:layout_alignRight="@+id/imgSpeaker"
                android:layout_alignStart="@+id/imgSpeaker"
                android:layout_below="@+id/imgSpeaker"
                android:gravity="center"
                android:text="Speker"
                android:textSize="12sp"
                android:fontFamily="@font/assistant"
                android:textColor="@color/white3" />


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgHangUp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
       android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/hangup_56" />


</RelativeLayout>